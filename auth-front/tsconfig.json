{
  "compilerOptions": {
    "target": "ES6", // O puedes usar "ES2015"
    "module": "commonjs",
    "jsx": "react",
    "lib": ["ES2015", "DOM"], // Aseg√∫rate de incluir ES2015
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
